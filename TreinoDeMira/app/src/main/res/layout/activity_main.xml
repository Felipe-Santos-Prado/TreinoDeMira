<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tvCliques"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#4D1515"
        android:gravity="center"
        android:padding="10dp"
        android:text="CLIQUES:  0"
        android:textColor="#AF9292"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAcertos"
        app:layout_constraintTop_toBottomOf="@+id/clTela" />

    <TextView
        android:id="@+id/tvAcertos"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#4D1515"
        android:gravity="center"
        android:padding="10dp"
        android:text="ACERTOS: 0"
        android:textColor="#AF9292"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tvCliques"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clTela" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#4D1515"
        android:gravity="center"
        android:padding="10dp"
        android:text="AIM TRAINING"
        android:textColor="#AF9292"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTela"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvCliques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReiniciar">

        <TextView
            android:id="@+id/tvGanhou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="16dp"
            android:background="#4D1515"
            android:gravity="center"
            android:padding="10dp"
            android:text="VOCÊ GANHOU!!"
            android:textColor="#AF9292"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAlvo1" />

        <ImageView
            android:id="@+id/ivAlvo1"
            android:layout_width="102dp"
            android:layout_height="86dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alvo500" />

        <ImageView
            android:id="@+id/ivAlvo2"
            android:layout_width="102dp"
            android:layout_height="86dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alvo500" />

        <ImageView
            android:id="@+id/ivAlvo3"
            android:layout_width="102dp"
            android:layout_height="86dp"
            android:layout_marginStart="308dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alvo500" />

        <ImageView
            android:id="@+id/ivArma"
            android:layout_width="139dp"
            android:layout_height="147dp"
            android:layout_marginStart="346dp"
            android:layout_marginTop="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGanhou"
            app:srcCompat="@drawable/arma1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivVida1"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivVida2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvComecar"
        app:srcCompat="@drawable/vida" />

    <ImageView
        android:id="@+id/ivVida2"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivVida3"
        app:layout_constraintStart_toEndOf="@+id/ivVida1"
        app:layout_constraintTop_toBottomOf="@+id/tvRegras"
        app:srcCompat="@drawable/vida" />

    <ImageView
        android:id="@+id/ivVida3"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivVida2"
        app:layout_constraintTop_toBottomOf="@+id/tvRegras"
        app:srcCompat="@drawable/vida" />

    <TextView
        android:id="@+id/tvComecar"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:background="#C9C17676"
        android:gravity="center"
        android:onClick="comecar"
        android:text="COMEÇAR ROUND 1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ivVida1"
        app:layout_constraintEnd_toStartOf="@+id/tvRegras"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tvRegras"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="5dp"
        android:background="#C9C17676"
        android:gravity="center"
        android:onClick="regras"
        android:text="COMO JOGAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ivVida1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/tvReiniciar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#C9C17676"
        android:gravity="center"
        android:onClick="reiniciar"
        android:text="REINICIAR JOGO"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivVida2" />

</androidx.constraintlayout.widget.ConstraintLayout>