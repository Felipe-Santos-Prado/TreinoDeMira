<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall1"
    tools:context=".PrimeiraAcitivity">

    <TextView
        android:id="@+id/tvGanhou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="#7AFFFFFF"
        android:gravity="center"
        android:text="A activicy é um componente de aplicação que representa uma tela ou interface do usuário. Ela é a classe principal que permite que o utilizador interaja com a aplicação através da sua interface gráfica, exibindo elementos visuais e processando as interações do utilizador. Cada Activity representa uma tela ou janela, e a programação por trás dela, permitindo que interaja com o utilizador e com outros componentes da aplicação]"
        android:textColor="#073810"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C5FFFFFF"
        android:onClick="fechar"
        android:text="FECHAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGanhou" />
</androidx.constraintlayout.widget.ConstraintLayout>